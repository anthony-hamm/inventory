<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table class="table datatable table-bordered talbe-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Administrator</th>
      <th>Clerk</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.description %></td>
        <td><%= store.administrator_id %></td>
        <td><%= store.clerk_id %></td>
        <td><%= link_to 'Show', store %>
        <%= link_to 'Edit', edit_store_path(store) %>
        <%= link_to 'Destroy', store,  class: "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

