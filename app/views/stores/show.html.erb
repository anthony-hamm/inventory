<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Name:</strong>
      <%= @store.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @store.description %>
    </p>

    <p>
      <strong>Administrator:</strong>
      <%= @store.administrator_id %>
    </p>

    <p>
      <strong>Clerk:</strong>
      <%= @store.clerk_id %>
    </p>
    <div class="row">
      <%= link_to 'Edit', edit_store_path(@store), class: "btn btn-primary" %>
      <%= link_to 'Back', stores_path , class: "btn btn-info" %>
    </div>
  </div>
</div>



