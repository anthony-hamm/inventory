<p id="notice"><%= notice %></p>

<h1>Ingresos</h1>

<table class="table datatable table-bordered table-striped table-condensed table-hover text-center">
  <thead>
    <tr>
      <th class="text-center">Tienda</th>
      <th class="text-center">Articulo</th>
      <th class="text-center">Cantidad</th>
      <th class="text-center">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <!-- <td><%= entry.store_id %></td> -->
        <td><%= entry.store.name unless entry.store.nil? %></td>
        <td><%= entry.item.name unless entry.store.nil? %></td>
        <td><%= entry.quantity %></td>
        <td><%= link_to 'Mostrar', entry, class: "btn btn-primary" %>
        <%= link_to 'Editar', edit_entry_path(entry), class: "btn btn-primary" %>
        <%= link_to 'Eliminar', entry, class:"btn btn-danger", method: :delete, data: { confirm: 'Estas Seguro de Eliminar la Entrada?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Ingreso Mercaderia', new_entry_path, class: "btn btn-primary" %>
