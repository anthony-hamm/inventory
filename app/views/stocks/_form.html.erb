  <div class="field">
      <%= f.label :store_id %>
      <%= f.select :store_id, options_for_select( @stores.map { |store| [store.name, store.id] }), :include_blank => "Selectionar Tienda" %>
  </div>

  <div class="field">
    <%= f.label :item_id %>
    <%= f.select :item_id, options_for_select( @items.map { |item| [item.name, item.id] }), :include_blank => "Selectionar Articulo" %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
